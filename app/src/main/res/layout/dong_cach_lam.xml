<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgDauCham"
        android:src="@drawable/ic_lens_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:id="@+id/txtDescribtion"
        android:layout_toRightOf="@id/imgDauCham"
        android:text="Hướng dẫn cách làm"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgDeleteInstruction"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/txtDescribtion"
        android:id="@+id/imgInstruction"
        android:src="@drawable/gallery_256x256"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</RelativeLayout>